menu "Logging"

    config LOG_TASK_STACK_SIZE
        int "Logging task stack size"
        default 4096

    config LOG_TASK_PRIORITY
        int "Logging task priority"
        default 4

    config LOG_TASK_NAME
        string "Logging task name"
        default "LOG_TASK"

    config LOG_ENABLE
        bool "Enable logging"
        default y

    config LOG_LEVEL
        int "Log level (0=ERROR ... 4=VERBOSE)"
        default 4
        range 0 4

    config LOG_QUEUE_SIZE
        int "Queue size"
        default 16

    config LOG_MAX_MESSAGE_LENGTH
        int "Max message length"
        default 265

endmenu